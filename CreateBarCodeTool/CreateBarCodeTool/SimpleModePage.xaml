        <Button x:Name="btn_testNine" Content="09号" HorizontalAlignment="Left" Margin="246,303,0,0" VerticalAlignment="Top" Height="90" Width="100" Background="#FF0066B4" FontSize="24" Click="btn_testNine_Click" Foreground="White" PointerPressed="btn_testNine_PointerPressed"/>
        <Button x:Name="btn_25Jan" Content="25Jan" HorizontalAlignment="Left" Margin="10,398,0,0" VerticalAlignment="Top" Height="47" Width="63" Background="#FF0066B4" FontSize="16" Click="btn_25Jan_Click" Foreground="White" PointerPressed="btn_testNine_PointerPressed"/>
        <Button x:Name="btn_twentyForbidden" Content="20禁" HorizontalAlignment="Left" Margin="79,398,0,0" VerticalAlignment="Top" Height="47" Width="63" Background="#FF0066B4" FontSize="16" Click="btn_twentyForbidden_Click" Foreground="White" PointerPressed="btn_25Jan_PointerPressed"/>
