        <Button x:Name="btn_security" Content="防犯" HorizontalAlignment="Left" Margin="215,398,0,0" VerticalAlignment="Top" Height="47" Width="63" Background="#FF0066B4" FontSize="16" Click="btn_security_Click" Foreground="White" PointerPressed="btn_security_PointerPressed"/>
