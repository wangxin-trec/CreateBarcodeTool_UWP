        <Grid x:Name="GridLoading" Height="610"  VerticalAlignment="Top" >
            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity="0.6"/>
            </Grid.Background>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressRing x:Name="ProgressRingLoading" Width="100" Height="100" Foreground="White"/>
                <TextBlock Foreground="White" FontSize="25">請求中...</TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
