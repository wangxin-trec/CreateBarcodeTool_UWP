        <Button x:Name="btn_testFour" Content="04号" HorizontalAlignment="Left" Margin="10,206,0,0" VerticalAlignment="Top" Height="90" Width="100" Background="#FF0066B4" FontSize="24" Click="btn_testFour_Click" Foreground="White" PointerPressed="btn_testFour_PointerPressed"/>
        <Button x:Name="btn_testFive" Content="05号" HorizontalAlignment="Left" Margin="128,206,0,0" VerticalAlignment="Top" Height="90" Width="100" Background="#FF0066B4" FontSize="24" Click="btn_testFive_Click" Foreground="White" PointerPressed="btn_testFive_PointerPressed"/>
