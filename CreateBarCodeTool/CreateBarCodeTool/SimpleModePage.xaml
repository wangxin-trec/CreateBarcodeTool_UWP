        <RadioButton x:Name="raBtn_both_no" Content="スマホと磁気使用なし" HorizontalAlignment="Left" Margin="128,70,0,0" VerticalAlignment="Top" Width="219" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsChecked="True" Background="#FF0066B4" Foreground="White"/>
        <Button x:Name="btn_testOne" Content="01号" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top" Height="90" Width="100" Background="#FF0066B4" FontSize="24" Click="btn_testOne_Click" Foreground="White" PointerPressed="btn_testOne_PointerPressed"/>
